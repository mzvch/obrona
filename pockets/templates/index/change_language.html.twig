{% extends "base.html.twig" %}

{% block title %}Pockets - {{ "change_language_title" | trans }}{% endblock %}

{% block main %}
    <h1 class="h1 text-center mt-5 mb-5 pt-5">{{ "change_language_h1" | trans }}</h1>

    <div class="w-50 mr-auto ml-auto pt-3">
        {{ form_start (form) }}
            {{ form_row (form.language) }}

            {{ form_row (form.submit) }}
        {{ form_end (form) }}
    </div>

    <div class="text-center mt-5 pt-5">
        <a href="{{ url ("index") }}">{{ "change_language_return_link" | trans }}</a>
    </div>
{% endblock %}

{% block footer %}
    {{ include ("_bottom_fixed_footer.html.twig") }}
{% endblock %}